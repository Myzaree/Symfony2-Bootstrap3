{% use "form_div_layout.html.twig" %}

{# Inject templates into "~/Symfony/Bridge/Twig/Resources/views/Form/form_div_layout.html.twig" #}

{% block form_row %}
{% spaceless %}
	{% set label_class = (errors|length > 0) ? 'control-label label-warning' : 'control-label' %}
	<div class="form-group">
		{{ form_label(form, null, {'label_attr': {'class': {{label_class}}}}) }}
		{{ form_errors(form) }}
		{{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
	</div>
{% endspaceless %}
{% endblock form_row %}

{% block form_errors %}
{% spaceless %}
	{% if errors|length > 0 %}
		{% for error in errors %}
		<div class="alert alert-danger">{{ error.message }}</div>
		{% endfor %}
	{% endif %}
{% endspaceless %}
{% endblock form_errors %}